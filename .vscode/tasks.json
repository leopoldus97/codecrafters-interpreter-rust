{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "type": "shell",
      "command": "cargo",
      "args": ["build"],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "build released",
      "type": "shell",
      "command": "cargo",
      "args": ["build", "--release"],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "run",
      "type": "shell",
      "command": "cargo",
      "args": ["run"],
      "group": {
        "kind": "test",
        "isDefault": true
      }
    },
    {
      "label": "watch-build",
      "type": "shell",
      "command": "cargo watch -x build",
      "problemMatcher": ["$rustc"],
      "isBackground": true,
      "presentation": {
        "reveal": "silent"
      },
      "group": "build"
    },
    {
      "label": "watch-run",
      "type": "shell",
      "command": "cargo watch -x run",
      "problemMatcher": ["$rustc"],
      "isBackground": true,
      "presentation": {
        "reveal": "silent"
      },
      "group": "test"
    }
  ]
}
